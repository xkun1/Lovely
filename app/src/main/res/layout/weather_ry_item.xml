<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/item_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/item_txt_d_n"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/item_date"
        android:layout_below="@id/item_date"
        android:layout_marginTop="5dp"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/item_tmp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@id/item_date"
        android:layout_marginRight="10dp"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/item_feng"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/item_tmp"
        android:layout_alignParentRight="true"
        android:layout_below="@id/item_tmp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:textSize="16sp" />


</RelativeLayout>